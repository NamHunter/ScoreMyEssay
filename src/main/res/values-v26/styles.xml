<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="searchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@drawable/searchview_background</item>

        <item name="android:queryHint">Nhập tên bài viết</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>

    <!--    dialog show teacher-->
    <style name="custom_title_show_teacher_dialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>