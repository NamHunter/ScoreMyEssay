<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="roundImage" >
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="color">@color/white</item>
    </style>
    <style name="LOGIN_REGISTER_FONT" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#00A5FF</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="cardView_custom" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="contentPadding">10dp</item>
    </style>
    <style name="customTabStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
    </style>

    <!--    cart Fragment-->
    <style name="customTextView">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--    item_essay-->
    <style name="custom_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="recyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!--    detail Essay-->
    <style name="custom_title_view_detail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="custom_content_view_detail">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="txt_title_teacher_fragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyRadioCustom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">5</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="bg_button_design">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:padding">8dp</item>
        <item name="android:ems">7</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="bg_button_design_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
        <item name="android:ems">9</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>