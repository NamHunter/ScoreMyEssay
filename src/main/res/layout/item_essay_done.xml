    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_card_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_essay_done"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#12: IELTS WRITING TASK 2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:background="#00000000"/>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="People nowadays think tourism...."
                    android:maxLines="1"
                    android:maxEms="10"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:background="#00000000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtGrade"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Điểm 7.0"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#24c784"
                android:background="@drawable/bg_edt_diem"/>

        </LinearLayout>
        <TextView
            android:id="@+id/txtContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“You are doing great. The main idea is good. I have expressed your opinions and empasize them. However, there are some points you....."
            android:textSize="15sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:background="#00000000"
            android:layout_marginTop="10dp"/>
